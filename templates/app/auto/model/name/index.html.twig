{% extends 'blocks/block_container_half.html.twig' %}
{% block header %}
    <div class="block-header block-header-default">
        <h3 class="block-title">Основные данные</h3>
        <div class="block-options">
            <a type="button" class="btn btn-sm btn-alt-primary"
               href="{{ path('auto.model.edit', {'auto_markaID': autoMarka.id, 'id': autoModel.id}) }}"
               title="Изменить"><i class="fas fa-edit"></i></a>
            <a type="button" class="btn btn-sm btn-alt-primary"
               href="{{ path('auto.model.photo', {'auto_markaID': autoMarka.id, 'id': autoModel.id}) }}"
               title="Изменить картинку"><i class="fas fa-image"></i></a>
            {% if (autoModel.photo != '') %}
                <span>
                    <a href="#" class="btn btn-sm btn-alt-danger"
                       onclick="deleteFile(this, 'Вы уверены, что хотите удалить картинку?')"
                       data-image_block_id="autoModelPhoto"
                       title="Удалить картинку"
                       data-delete_url="{{ path('auto.model.photo.delete', {'auto_markaID': autoMarka.id, 'id': autoModel.id}) }}"
                       data-toggle="modal"
                       data-target="#modalConfirm"><i class="fas fa-eraser"></i></a>
                </span>
            {% endif %}
        </div>
    </div>
{% endblock %}
{% block content %}

    <div class="row">
        <div class="col">
            <p><strong>Наименование: </strong> {{ autoModel.name }}</p>
            <p><strong>Наименование русское: </strong> {{ autoModel.nameRus }}</p>
            <p><strong>Путь: </strong> {{ autoModel.path }}</p>
        </div>
        <div id="autoModelPhoto" class="col-auto">
            {% if (autoModel.photo != '') %}
                <img src="{{ auto_photo_folder ~ autoModel.photo }}">
            {% endif %}
        </div>
    </div>
{% endblock %}