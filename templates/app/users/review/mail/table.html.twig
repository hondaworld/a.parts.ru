<h1>Клиенты, совершившие покупки {{ dateText }}</h1>

<table class="table table-bordered table-striped">
    <thead>
    <tr class="table-primary">
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Город</th>
        <th>Телефон</th>
        <th>Отзыв отправлен</th>
        <th>Отзыв размещен</th>
    </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr class="{{ user.review.reviewSend ? 'text-success' : (user.review.review ? 'text-muted' : '') }}">
            <td><a href="{{ path('order.goods', {'id': user.id}) }}">{{ user.userName.lastname }}</a></td>
            <td><a href="{{ path('order.goods', {'id': user.id}) }}">{{ user.userName.firstname }}</a></td>
            <td>{{ user.mainContact.town.name }}</td>
            <td>{{ user.phonemob }}</td>
            <td>{{ user.review.reviewSend ? 'да' : 'нет' }}</td>
            <td>{{ user.review.review ? 'да' : 'нет' }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>