        <div class="block block-rounded">
            <div class="block-header block-header-default">Данные организации</div>
            <div class="block-content">
                <div class="row justify-content-center py-sm-2 py-md-3">
                    <div class="col-sm-10 col-md-8">
                        {{ form_row(form.organization) }}
                        {{ form_row(form.inn) }}
                        {{ form_row(form.kpp) }}
                        {{ form_row(form.okpo) }}
                        {{ form_row(form.ogrn) }}
                        {{ form_row(form.isNDS) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-12">
        <div class="block block-rounded">
            <div class="block-header block-header-default">Адрес</div>
            <div class="block-content">
                <div class="row justify-content-center py-sm-2 py-md-3">
                    <div class="col-sm-10 col-md-8">
                        {{ form_row(form.address) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-12">
        <div class="block block-rounded">
            <div class="block-header block-header-default">Данные для связи</div>
            <div class="block-content">
                <div class="row justify-content-center py-sm-2 py-md-3">
                    <div class="col-sm-10 col-md-8">
                        {{ form_row(form.phone) }}
                        {{ form_row(form.fax) }}
                        {{ form_row(form.email) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-12">
        <div class="block block-rounded">
            <div class="block-header block-header-default">Реквизиты</div>
            <div class="block-content">
                <div class="row justify-content-center py-sm-2 py-md-3">
                    <div class="col-sm-10 col-md-8">
                        {{ form_row(form.bank) }}
                        {{ form_row(form.rasschet) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
