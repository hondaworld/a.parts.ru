{% extends 'blocks/block_container.html.twig' %}

{% block header %}
    {{ include ('blocks/block_header_default.html.twig', {'header': 'E-mail клиента и его настройки'}) }}
{% endblock %}

{% block content %}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_row(form.email) }}
    {{ form_row(form.isActive) }}
    {{ form_row(form.isNotification) }}
    {{ form_row(form.excludeEmailStatuses) }}

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a class="ml-3 btn btn-secondary" href="{{ path('users.show', {'id': user.id}) }}">Отменить</a>
    {{ form_end(form) }}

{% endblock %}