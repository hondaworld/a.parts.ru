{% extends 'print.html.twig' %}

{% block body %}

    {% embed 'tables/table_simple.html.twig' %}

        {% block table_header %}
            <th>ID</th>
            <th>Клиент</th>
            <th>Баланс</th>
            <th>Метод оплаты</th>
        {% endblock %}

        {% block table_body %}
            {% for user in pagination %}
                <tr>
                    <td>{{ user.userID }}</td>
                    <td>{{ user.name }}</td>
                    <td class="text-right">{{ user.balance|number_format(2, ',', ' ') }}</td>
                    <td>{{ user.shop_pay_type }}</td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
