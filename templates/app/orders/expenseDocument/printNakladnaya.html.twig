                        <th width="4%">в одном месте</th>
                        <th width="4%">мест, штук</th>
                        <th width="5%">&nbsp;</th>
                        <th width="5%">&nbsp;</th>
                        <th width="8%">&nbsp;</th>
                        <th width="8%">&nbsp;</th>
                        <th width="5%">ставка, %</th>
                        <th width="8%">сумма, руб. коп.</th>
                        <th width="8%">&nbsp;</th>
                    </tr>
                    <tr>
                        <th>1</th>
                        <th>2</th>
                        <th>3</th>
                        <th>4</th>
                        <th>5</th>
                        <th>6</th>
                        <th>7</th>
                        <th>8</th>
                        <th>9</th>
                        <th>10</th>
                        <th>11</th>
                        <th>12</th>
                        <th>13</th>
                        <th>14</th>
                        <th>15</th>
                    </tr>
                    {% for index, orderGood in orderGoods %}
                        <tr>
                            <td class="text-center">{{ index + 1 }}</td>
                            <td>{{ orderGood.detail_name }} ({{ orderGood.number }})</td>
                            <td>&nbsp;</td>
                            <td class="text-center">{{ orderGood.ed_izm }}</td>
                            <td class="text-center">{{ orderGood.okei }}</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td class="text-center">{{ orderGood.quantity }},000</td>
                            <td class="text-right"
                                nowrap>{{ orderGood.priceWithoutNds|number_format(2, ',', ' ') }}</td>
                            <td class="text-right" nowrap>{{ orderGood.sumWithoutNds|number_format(2, ',', ' ') }}</td>
                            <td class="text-center">{{ nalogNds.nds == 0 ? '-' : nalogNds.nds|number_format(0, '', '') }}</td>
                            <td class="text-right" nowrap>{{ orderGood.ndsSum|number_format(2, ',', ' ') }}</td>
                            <td class="text-right" nowrap>{{ orderGood.sum|number_format(2, ',', ' ') }}</td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <td class="text-right" colspan="7"
                            style="border-bottom: 1px solid #FFFFFF; border-left: 1px solid #FFFFFF;">Всего по накладной
                        </td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td class="text-center">{{ sum.quantity }},000</td>
                        <td class="text-right" nowrap>{{ sum.priceWithoutNds|number_format(2, ',', ' ') }}</td>
                        <td class="text-right" nowrap>{{ sum.sumWithoutNds|number_format(2, ',', ' ') }}</td>
                        <td class="text-center">{{ nalogNds.nds == 0 ? '-' : nalogNds.nds|number_format(0, '', '') }}</td>
                        <td class="text-right" nowrap>{{ sum.ndsSum|number_format(2, ',', ' ') }}</td>
                        <td class="text-right" nowrap>{{ sum.sum|number_format(2, ',', ' ') }}</td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                <table cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                        <td colspan="3">Товарная накладная имеет приложение на 1 листах</td>
                    </tr>
                    <tr>
                        <td nowrap>и содержит</td>
                        <td style="border-bottom: 1px solid #000000;" width="100%"
