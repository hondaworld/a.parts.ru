    <div class="mb-1">
        <ul class="nav-main nav-main-horizontal nav-main-hover">
            <li class="nav-main-item pr-2 font-weight-bold">
                <div class="py-2">Алерты</div>
            </li>
            {% for typeID, typeName in alertTypes %}
                <li class="nav-main-item{{ param == 'alert_' ~ typeID ? ' active' : '' }}">
                    <a class="nav-main-link{{ param == 'alert_' ~ typeID ? ' active' : '' }}"
                       href="#"
                       data-url="{{ path('orders.countAlerts') }}"
                       data-id="alert_{{ typeID }}"
                    >{{ typeName }} <span class="nav-main-link-badge badge badge-pill badge-primary">...</span></a>
                </li>
            {% endfor %}
        </ul>
    </div>
    <div class="mb-1">
        <ul class="nav-main nav-main-horizontal nav-main-hover">
            <li class="nav-main-item pr-2 font-weight-bold">
                <div class="py-2">С датой</div>
