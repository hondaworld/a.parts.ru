{% extends 'base.html.twig' %}

{% block title %}Поставщик {{ provider.name }}{% endblock %}
{% block header %}{{ block('title') }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a
                href="{{ path('providers', {'page' : app.session.get('page/providers')|default(1)}) }}">Поставщики</a>
    </li>
    <li class="breadcrumb-item">{{ provider.name }}</li>
{% endblock %}

{% block body %}

    {% if (edit == 'main') %}
        {{ include('app/providers/provider/main/edit.html.twig') }}
    {% elseif (edit == 'email') %}
        {{ include('app/providers/provider/email/edit.html.twig') }}
    {% elseif (edit == 'send') %}
        {{ include('app/providers/provider/send/edit.html.twig') }}
    {% elseif (edit == 'opt') %}
        {{ include('app/providers/provider/opt/edit.html.twig') }}
    {% elseif (edit == 'priceCurrency') %}
        {{ include('app/providers/provider/main/priceCurrency.html.twig') }}
    {% endif %}

    <div class="row">
        <div class="col-xl-6">
            {{ include('app/providers/provider/main/index.html.twig') }}
            {% if (edit is empty) %}
                {{ include('app/providers/provider/opt/index.html.twig') }}
            {% endif %}
        </div>
        <div class="col-xl-6">
            {{ include('app/providers/provider/email/index.html.twig') }}
            {{ include('app/providers/provider/send/index.html.twig') }}
        </div>
    </div>

{% endblock %}