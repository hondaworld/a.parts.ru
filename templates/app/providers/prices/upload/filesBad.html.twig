{% extends 'blocks/block_container_half.html.twig' %}
{% block header %}
    <div class="block-header block-header-default">
        <h3 class="block-title">Бесхозные файлы</h3>
        <div class="block-options">

        </div>
    </div>
{% endblock %}
{% block content %}

    <div id="prices_log_files_bad">

        {% embed 'tables/table_simple.html.twig' %}

            {% block header_buttons %}{% endblock %}

            {% block table_header %}
                <th>Файл</th>
                <th>Размер</th>
                <th>Дата</th>
                <th></th>
            {% endblock %}

            {% block table_body %}
                {% for file in badFiles %}
                    <tr>
                        <td>{{ file.name }}</td>
                        <td>{{ file.size }}</td>
                        <td>{{ file.date|date('d.m.Y H:i') }}</td>
                        <td>
                            <a href="{{ path('providers.prices.upload.file.delete', {'filename': file.name}) }}"
                               onclick="deleteItem(this, 'Вы уверены, что хотите удалить файл?')"
                               data-toggle="modal"
                               data-target="#modalConfirm"
                               class="text-danger"
                               title="Удалить файл">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            {% endblock %}
        {% endembed %}
    </div>

{% endblock %}