{% extends 'base.html.twig' %}

{% block title %}Редактирование профиля{% endblock %}
{% block header %}Профиль{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item">Профиль</li>
{% endblock %}

{% block body %}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-xl-6">
            <div class="block block-rounded">
                <div class="block-header block-header-default">Ваше имя</div>
                <div class="block-content">
                    <div class="row justify-content-center py-sm-2 py-md-3">
                        <div class="col-sm-10">
                            {{ form_row(form.login) }}
                            {{ form_row(form.name) }}
                            {{ form_row(form.firstname) }}
                            {{ form_row(form.lastname) }}
                            {{ form_row(form.middlename) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="block block-rounded">
                <div class="block-header block-header-default">Контактные данные</div>
                <div class="block-content">
                    <div class="row justify-content-center py-sm-2 py-md-3">
                        <div class="col-sm-10">
                            {{ form_row(form.phonemob) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.dateofmanager) }}
                            {{ form_row(form.sex) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="block block-rounded">
                <div class="block-header block-header-default">Аватар</div>
                <div class="block-content">
                    {{ form_row(form.photo) }}
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    {{ form_end(form) }}

{% endblock %}
