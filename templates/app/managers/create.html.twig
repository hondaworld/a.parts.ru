{% extends 'base.html.twig' %}

{% block title %}Добавление сотрудника{% endblock %}
{% block header %}Добавление сотрудника{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a
                href="{{ path('managers', {'page' : app.session.get('page/managers')|default(1)}) }}">Сотрудинки</a>
    </li>
    <li class="breadcrumb-item">Добавление</li>
{% endblock %}

{% block body %}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-xl-6">
            <div class="block block-rounded">
                <div class="block-header block-header-default">Данные авторизации</div>
                <div class="block-content">
                    <div class="row justify-content-center py-sm-2 py-md-3">
                        <div class="col-sm-10">
                            {{ form_row(form.login) }}
                            {{ form_row(form.password) }}
                            {{ form_row(form.groups) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="block block-rounded">
                <div class="block-header block-header-default">Имя</div>
                <div class="block-content">
                    <div class="row justify-content-center py-sm-2 py-md-3">
                        <div class="col-sm-10">
                            {{ form_row(form.firstname) }}
                            {{ form_row(form.lastname) }}
                            {{ form_row(form.middlename) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
    {{ form_end(form) }}

{% endblock %}