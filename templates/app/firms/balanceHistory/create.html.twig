{% extends 'base.html.twig' %}

{% block title %}Добавление баланса организации {{ firm.nameShort }}{% endblock %}
{% block header %}{{ block('title') }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('firms') }}">Организации</a></li>
    <li class="breadcrumb-item"><a href="{{ path('firms.balance.history', {'firmID': firm.id}) }}">Взаиморасчеты
            организации</a></li>
    <li class="breadcrumb-item">Добавление</li>
{% endblock %}

{% block body %}

    {% embed 'blocks/block_container.html.twig' %}
        {% block content %}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_row(form.providerID) }}
            {{ form_row(form.balance) }}
            {{ form_row(form.balance_nds) }}
            {{ form_row(form.description) }}
            <button type="submit" class="btn btn-primary">Добавить</button>
            <a class="ml-3 btn btn-secondary"
               href="{{ path('firms.balance.history', {'firmID': firm.id}) }}">Отменить</a>
            {{ form_end(form) }}
        {% endblock %}
    {% endembed %}
{% endblock %}