{% embed 'tables/table_simple.html.twig' %}

    {% block header_buttons %}{% endblock %}

    {% block table_header %}
        <th>Поставщик</th>
        <th>Платежи</th>
    {% endblock %}

    {% block table_body %}
        {% for balance in balances %}
            <tr>
                <td>{{ balance.provider_name }}</td>
                <td class="text-right{{ balance.balance > 0 ? ' text-danger' : (balance.balance < 0 ? ' text-success' : '') }}">{{ balance.balance|abs|number_format(2, ',', ' ') }}</td>
            </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
