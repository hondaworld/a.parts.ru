{% extends 'blocks/block_container.html.twig' %}
{% block content %}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_row(form.regionID) }}
    {{ form_row(form.name) }}
    <div class="row">
        <div class="col-md-4">{{ form_row(form.typeID) }}</div>
        <div class="col-md-8">{{ form_row(form.name_short) }}</div>
    </div>
    {{ form_row(form.name_doc) }}
    {{ form_row(form.daysFromMoscow) }}
    {{ form_row(form.isFree) }}

    <button type="submit" class="btn btn-primary">{{ buttonName|default('Сохранить') }}</button>
    <a class="ml-3 btn btn-secondary" href="{{ path('towns', {'countryID': country.id, 'page': app.session.get('page/towns')|default(1)}) }}">Отменить</a>
    {{ form_end(form) }}

{% endblock %}
