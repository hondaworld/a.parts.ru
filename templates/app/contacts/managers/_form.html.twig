{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="row">
    <div class="col-xl-6">
        <div class="block block-rounded">
            <div class="block-header block-header-default">Адрес</div>
            <div class="block-content">
                <div class="row justify-content-center py-sm-2 py-md-3">
                    <div class="col-sm-10">
                        {{ form_row(form.address) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="block block-rounded">
            <div class="block-header block-header-default">Контактные данные</div>
            <div class="block-content">
                <div class="row justify-content-center py-sm-2 py-md-3">
                    <div class="col-sm-10">
                        {{ form_row(form.phonemob) }}
                        {{ form_row(form.phone) }}
                        {{ form_row(form.fax) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.http) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="block block-rounded">
            <div class="block-header block-header-default">Дополнительная информация</div>
            <div class="block-content">
                <div class="row justify-content-center py-sm-2 py-md-3">
                    <div class="col-sm-10 col-md-8">
                        {{ form_row(form.description) }}
                        {{ form_row(form.isUr) }}
                        {{ form_row(form.isMain) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<button type="submit" class="btn btn-primary">{{ buttonName|default('Сохранить') }}</button>
{{ form_end(form) }}