{% extends 'base.html.twig' %}

{% block title %}Добавление операции{% endblock %}
{% block header %}Добавление операции{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('menu.groups') }}">Группы меню</a></li>
    <li class="breadcrumb-item">
        <a href="{{ path('menu.sections', {'groupID': section.group.id, 'parentID': 0}) }}">{{ section.group.name }}</a>
    </li>
    {% for breadCrumb in arBreadCrumb %}
        {% if (not breadCrumb.url|default(false)) %}
        {% else %}
            <li class="breadcrumb-item">
                <a href="{{ path('menu.sections', {'groupID': section.group.id, 'parentID': breadCrumb.data.id}) }}">{{ breadCrumb.name }}</a>
            </li>
        {% endif %}
    {% endfor %}
    <li class="breadcrumb-item"><a href="{{ path('menu.actions', {'sectionID': section.id}) }}">{{ section.name }} -
            операции</a></li>
    <li class="breadcrumb-item">Добавление</li>

{% endblock %}

{% block body %}
    {{ include('app/menu/actions/_form_create.html.twig') }}
{% endblock %}